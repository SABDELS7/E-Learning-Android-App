<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >





        <TextView
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Student ID : "
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="italic"
            android:textColor="@color/primaryTextColor"
            />

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="13naser"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/ID"
            app:layout_constraintBottom_toBottomOf="@+id/ID"
            app:layout_constraintStart_toEndOf="@+id/ID"
            />


        <TextView
            android:id="@+id/quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Quiz Grade : "
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/ID"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="italic"
            android:textColor="@color/primaryTextColor"
            />

        <TextView
            android:id="@+id/text_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="120"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/quiz"
            app:layout_constraintBottom_toBottomOf="@+id/quiz"
            app:layout_constraintStart_toEndOf="@+id/quiz"
            />


        <TextView
            android:id="@+id/attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/attendance_grade"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/quiz"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="italic"
            android:textColor="@color/primaryTextColor"
            />

        <TextView
            android:id="@+id/text_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="1231"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/attendance"
            app:layout_constraintBottom_toBottomOf="@+id/attendance"
            app:layout_constraintStart_toEndOf="@+id/attendance"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
