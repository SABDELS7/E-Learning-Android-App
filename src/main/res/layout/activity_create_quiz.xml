<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    >
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upper_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upper_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Quiz"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        />

    <ImageView
        android:id="@+id/ques_background"
        android:layout_width="412dp"
        android:layout_height="203dp"
        android:src="@drawable/ques_bkg"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/upper_line"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/ques_place"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ques_txt"
        app:layout_constraintTop_toTopOf="@id/ques_background"
        app:layout_constraintBottom_toBottomOf="@id/ques_background"
        app:layout_constraintHeight_percent="0.20"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:layout_marginBottom="3dp"
        android:hint="Enter The Question"
        android:paddingStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <CheckBox
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ques_place"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingStart="10dp"
        />
    <EditText
        android:id="@+id/edit_answer1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/answer1"
        app:layout_constraintTop_toTopOf="@id/answer1"
        app:layout_constraintBottom_toBottomOf="@id/answer1"
        android:background="@drawable/text_boxes"
        android:hint="Answer 1"
        android:paddingStart="10dp"
        />
    <CheckBox
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/answer1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingStart="10dp"
        />
    <EditText
        android:id="@+id/edit_answer2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/answer2"
        app:layout_constraintTop_toTopOf="@id/answer2"
        app:layout_constraintBottom_toBottomOf="@id/answer2"
        android:background="@drawable/text_boxes"
        android:hint="Answer 2"
        android:paddingStart="10dp"
        />
    <CheckBox
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/answer2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingStart="10dp"
        />
    <EditText
        android:id="@+id/edit_answer3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/answer3"
        app:layout_constraintTop_toTopOf="@id/answer3"
        app:layout_constraintBottom_toBottomOf="@id/answer3"
        android:background="@drawable/text_boxes"
        android:hint="Answer 3"
        android:paddingStart="10dp"
        />
    <CheckBox
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/answer3"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingStart="10dp"
        />
    <EditText
        android:id="@+id/edit_answer4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/answer4"
        app:layout_constraintTop_toTopOf="@id/answer4"
        app:layout_constraintBottom_toBottomOf="@id/answer4"
        android:background="@drawable/text_boxes"
        android:hint="Answer 4"
        android:paddingStart="10dp"
        />
    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer4"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/next_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        android:text="Next Question"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_boxes"
        app:backgroundTint="@color/primaryTextColor"
        app:layout_constraintTop_toBottomOf="@id/next_ques"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:text="Upload the quiz"
        android:textSize="25sp"
        android:textStyle="italic"
        />


</androidx.constraintlayout.widget.ConstraintLayout>