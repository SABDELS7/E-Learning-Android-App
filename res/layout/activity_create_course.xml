<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/primaryTextColor"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_attend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        >

        <ImageView
            android:id="@+id/grade"
            android:src="@drawable/hero"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="10dp"
            android:layout_marginStart="170dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New \ncourse"
            android:textSize="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/primaryTextColor"
            />
        <EditText
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:background="@drawable/text_boxes"
            android:layout_marginHorizontal="20dp"
            android:hint="Course Name"
            android:paddingStart="110dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/attend_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="360dp"
            app:cardElevation="6dp"
            android:layout_marginStart="10dp"
            >
            <EditText
                android:id="@+id/edit_attend_grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_boxes"
                android:hint="Attend Grades"
                android:paddingStart="20dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/project_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="360dp"
            app:cardElevation="6dp"
            android:layout_marginStart="130dp"
            >
            <EditText
                android:id="@+id/edit_project_grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_boxes"
                android:hint="Project Grades"
                android:paddingStart="20dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ass_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="360dp"
            app:cardElevation="6dp"
            android:layout_marginStart="250dp"
            >
            <EditText
                android:id="@+id/edit_assign_grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_boxes"
                android:hint="Assign.. Grades"
                android:paddingStart="20dp"
                />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:backgroundTint="@color/primaryTextColor"
            android:text="Confirm to create course"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp"
            />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>